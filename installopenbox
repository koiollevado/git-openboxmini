#!/bin/bash

sudo passwd root

sudo apt-get update
sudo apt-get upgrade
sudo apt-get install -f
sudo apt-get autoremove
sudo apt-get clean
sudo apt-get autoclean

echo " "
echo " "
echo "Deseja instalar o drive proprietario de video?"
echo "Digite (s)im ou (n)ao. Tecle Enter para confirmar: " ; read resposta

if [ $resposta -eq s ]
then
    lspc1 | grep vga
    echo "Insira o nome do drive vga listado: " ; read driver
    sudo apt search $driver
    echo "Insira o nome do pacote a ser instalado: " ; read pacote
    sudo apt install $pacote
    sudo apt-get install -f
    sudo update-initramfs -u
    sudo reboot
else    
    echo "Continuemos o procedimento de instalacao de outros pacotes."
    sleep 5
    clear
fi

echo " "
echo " "
echo "Pesquisando aplicativos no repositorio para a instalacao. Aguarde..."
sleep 5

sudo apt search xinit
sudo apt search slim
sudo apt search openbox
sudo apt search obconf
sudo apt search lxappearance
sudo apt search wicd
sudo apt search wicd-curses
sudo apt search pulseaudio
sudo apt search pavucontrol
sudo apt search pcmanfm
sudo apt search conky
sudo apt search xarchiver
sudo apt search leafpad
sudo apt search feh
sudo apt search chromium-browser
sudo apt search firefox
sudo apt search lxterminal

clear

echo " "
echo " "
echo "Iniciando a instalacao de aplicativos do repositorio. Aguarde..."
sleep 5

sudo apt install xinit
sudo apt install slim
sudo apt install openbox
sudo apt install obconf
sudo apt install lxappearance
sudo apt install wicd
sudo apt install wicd-curses
sudo apt install pulseaudio
sudo apt install pavucontrol
sudo apt install pcmanfm
sudo apt install conky
sudo apt install xarchiver
sudo apt install leafpad
sudo apt install feh
sudo apt install chromium-browser
sudo apt install firefox
sudo apt install lxterminal

echo " "
echo " "
echo "Deseja instalar o editor de texto gedit?"
echo "Digite (s)im ou (n)ao. Tecle Enter para confirmar: " ; read gedit

if [ $gedit -eq s ]
then
    sudo apt search gedit
    sudo apt-get install gedit --no-install-recommends --no-install-suggests
else    
    echo "Continuemos o procedimento de instalacao de outros pacotes."
    sleep 5
    clear
fi

echo " "
echo " "
echo "Deseja instalar o reprodutor de midia vlc?"
echo "Digite (s)im ou (n)ao. Tecle Enter para confirmar: " ; read vlc

if [ $vlc -eq s ]
then
    sudo apt search vlc
    sudo apt-get install vlc --no-install-recommends --no-install-suggests
else    
    echo "Continuemos o procedimento de instalacao de outros pacotes."
    sleep 5
    clear
fi


#sudo apt remove xserver-xorg-video-*
#sudo apt remove uxterm xterm

sudo apt-get install -f
sudo apt-get autoremove
sudo apt-get clean
sudo apt-get autoclean
